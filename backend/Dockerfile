FROM python:3.12-slim

WORKDIR /app
RUN mkdir backend
RUN pip install --upgrade pip


COPY requirements.txt ./backend

RUN pip install --no-cache-dir -r ./backend/requirements.txt || true

COPY . ./backend

EXPOSE 8000

CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
